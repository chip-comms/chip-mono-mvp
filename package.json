{
  "name": "chip-mono-mvp",
  "version": "1.0.0",
  "private": true,
  "description": "Meeting Intelligence Assistant - Monorepo",
  "workspaces": [
    "frontend",
    "supabase"
  ],
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../supabase && npm install && cd ../python-backend && pip install -r requirements.txt",
    "lint": "npm run lint --workspaces --if-present",
    "lint:frontend": "npm run lint --workspace=frontend",
    "lint:backend": "npm run lint --workspace=supabase",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\" \"!**/node_modules/**\" \"!**/.next/**\" \"!**/build/**\" \"!**/dist/**\" \"!**/python-backend/**\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\" \"!**/node_modules/**\" \"!**/.next/**\" \"!**/build/**\" \"!**/dist/**\" \"!**/python-backend/**\"",
    "format:frontend": "npm run format --workspace=frontend",
    "format:backend": "npm run format --workspace=supabase",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:python": "cd python-backend && source venv/bin/activate && uvicorn app.main:app --reload --port 8000",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:python\"",
    "build:frontend": "npm run build --workspace=frontend"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "prettier": "^3.0.0"
  }
}
